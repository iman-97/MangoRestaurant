<ul	class="navbar-nav">
	@if(User.Identity.IsAuthenticated)
	{
		<li	class="navbar-item">
			<a class="navbar-link" href="#">Hello @User.Identity.Name</a>
		</li>
		<li class="navbar-item">
			<a class="navbar-link" asp-action="Logout" asp-controller="Home">Logout</a>
		</li>
	}
	else
	{
		<li	class="navbar-item">
			<a class="navbar-link" asp-action="Login" asp-controller="Home">Login</a>
		</li>
	}
</ul>